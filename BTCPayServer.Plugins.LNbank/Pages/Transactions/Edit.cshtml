@page "/plugins/lnbank/wallets/{walletId}/transactions/edit/{transactionId}"
@model BTCPayServer.Plugins.LNbank.Pages.Transactions.EditModel

@{
    ViewData.SetActivePage(LNbankNavPages.Wallet, "Edit transaction", Model.Wallet.WalletId);
}

<partial name="_WalletHeader" model="Model.Wallet"/>

<h3 class="mb-4">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-xl-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.Description" class="form-label"></label>
                <input asp-for="Transaction.Description" class="form-control" autofocus />
                <span asp-validation-for="Transaction.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
